<ion-view ng-controller="introController">
  <ion-nav-title>
    <div class="bar bar-header">
      <div class="h1 title">질의응답(3/8)</div>
    </div>
  </ion-nav-title>

  <ion-content>
    <section>
      <div class="row" align="left" style="position: absolute; left:30px; top:50px">
        <font class="gray question">
        당신의 성별은 무엇입니까?</br></br>
        대답해주세요
        <br><br><br>
        </font>
      </div>

      <br><br><br><br><br><br><br><br><br><br>

        <table cellpadding="0" cellspacing="0" border="0" style="width:60%; margin:auto;">
          <tr>
            <td valign="top" ng-click="male_checked()">
                <input type='checkbox' name='thing' value='male' id="male" class="imgcheck_male" ng-model="userGender" 
                ng-click="tellGender()"/>
                <label for="male"></label>
            </td>
            <td><font color="white">aaa</font></td>
            <td valign="top" ng-click="female_checked()">
                <input type='checkbox' name='thing' value='female' id="female" class="imgcheck_female" ng-model="userGender"/>
                <label for="female"></label>
            </td>
          </tr>
        </table>
        
    </section>
  </ion-content>

<!--하단에 붙이는 버튼-->
<div class="" style="position: absolute; bottom: 20px; right:15px; width: 100%">
  <div class="row">
      <button class="button button-float" ng-click="next()">
        <i class="ion-arrow-right-b"></i>
      </button>

  </div>
</div>

</ion-view>
